<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/drawer_layout"
android:fitsSystemWindows="true"
tools:context=".HomeActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        app:title="@string/app_name"
        android:id="@+id/toolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_container">

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/home_ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:weightSum="2"
                    android:layout_margin="20dp">
                    <RelativeLayout
                        android:tag="1"
                        android:id="@+id/home_bakery"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/bakery"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/bakery"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Bakery"
                                    android:textSize="20dp" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:tag="2"
                        android:id="@+id/home_frozen_foods"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/frozen"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/frozen"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Frozen foods"
                                    android:textSize="20dp" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>




                <LinearLayout
                    android:id="@+id/home_ll2"
                    android:layout_below="@+id/home_ll1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:weightSum="2"
                    android:layout_margin="20dp">
                    <RelativeLayout
                        android:tag="3"
                        android:id="@+id/home_packed_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/packed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/packed"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Packed foods"
                                    android:textSize="20dp" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:tag="4"
                        android:id="@+id/home_dairy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/dairy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/dairy"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Dairy"
                                    android:textSize="20dp" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/home_ll3"
                    android:layout_below="@+id/home_ll2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:weightSum="2"
                    android:layout_margin="20dp">
                    <RelativeLayout
                        android:tag="5"
                        android:id="@+id/home_vegetables"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/veges"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/veges"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Vegetables"
                                    android:textSize="20dp" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:tag="6"
                        android:id="@+id/home_fruits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/fruits"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/fruits"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Fruits"
                                    android:textSize="20dp" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/home_ll4"
                    android:layout_below="@+id/home_ll3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:weightSum="2"
                    android:layout_margin="20dp">
                    <RelativeLayout
                        android:id="@+id/home_cooking_ess"
                        android:tag="7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/cook"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/cook"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Cooking essentials"
                                    android:textSize="20dp" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:tag="8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/home_beverages"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/beverages"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/beverages"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Beverages"
                                    android:textSize="20dp" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/home_ll5"
                    android:layout_below="@+id/home_ll4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:weightSum="2"
                    android:layout_margin="20dp">
                    <RelativeLayout
                        android:id="@+id/home_bathing_ess"
                        android:tag="9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/bath"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/bath"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Bathing and Personal care"
                                    android:textSize="20dp" />


                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>
                    <RelativeLayout
                        android:tag="10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_margin="10dp">

                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:id="@+id/home_skincare"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/backgroundcolor">
                                <ImageView
                                    android:id="@+id/skin"
                                    android:layout_width="wrap_content"
                                    android:layout_height="120dp"
                                    android:src="@drawable/icon_camera"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/skin"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="10dp"
                                    android:text="Poultry and meat"
                                    android:textSize="20dp" />
                            </RelativeLayout>

                        </android.support.v7.widget.CardView>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>





        </ScrollView>

    </FrameLayout>
</LinearLayout>

<android.support.design.widget.NavigationView
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity ="start"
    android:id="@+id/nav_view"
    app:headerLayout="@layout/nav_header"
    app:menu="@menu/draw_menu">
</android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>